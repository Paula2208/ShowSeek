<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E91E63"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".layout.Fragments.ContratoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="630dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Selecciona la fecha del evento que deseas buscar "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#9C27B0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:translationY="10dp">

                <EditText
                    android:id="@+id/fechaText"
                    android:layout_width="275dp"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:text="Fecha Evento" />

                <ImageButton
                    android:id="@+id/searchFecha"
                    android:layout_width="156dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:backgroundTint="#673AB7"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_search_24"
                    app:tint="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="355dp"
                android:layout_height="411dp"
                android:background="#9A9C27B0"
                android:backgroundTint="#989C27B0"
                android:backgroundTintMode="screen"
                android:translationY="20dp"
                app:cardBackgroundColor="#989C27B0"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/aceptado"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Estado del Contrato"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/costoFinal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Costo Final del Evento"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/costoInicial"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Costo Inicial del Evento"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/direccionEvento"
                        android:layout_width="match_parent"
                        android:layout_height="101dp"
                        android:gravity="center"
                        android:text="DirecciÃ³n del Evento"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/ciudadEvento"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Ciudad del Evento"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/horaEvento"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Hora del Evento"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/fechaEvento"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Fecha del Evento"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>