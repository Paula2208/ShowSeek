<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".layout.PerfilArtista"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/progesoFoto"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515" />


    <androidx.cardview.widget.CardView
        android:layout_height="411dp"
        android:layout_width="355dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cardView"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#989C27B0"
        android:translationY="20dp"
        android:backgroundTintMode="screen"
        android:backgroundTint="#989C27B0"
        android:background="#9A9C27B0">


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

        <ImageView
            android:layout_height="137dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView3"
            app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="50dp"/>

        <EditText
            android:layout_height="63dp"
            android:layout_width="match_parent"
            android:id="@+id/editTextGeneroMusical"
            android:inputType="textPersonName"
            android:hint="Genero Musical"
            android:fontFamily="sans-serif-medium"
            android:ems="10"/>

        <EditText
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:id="@+id/editTextNombreArtistico"
            android:inputType="textPersonName"
            android:hint="Nombre Artístico"
            android:fontFamily="sans-serif-medium"
            android:ems="10"/>

        <EditText
            android:layout_height="62dp"
            android:layout_width="match_parent"
            android:id="@+id/editTextTipoAgrupacion"
            android:inputType="textPersonName"
            android:hint="Tiempo de agrupación"
            android:fontFamily="sans-serif-medium"
            android:ems="10"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btnEnviar"
        android:backgroundTint="#989C27B0"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:text="Enviar"/>

</androidx.constraintlayout.widget.ConstraintLayout>