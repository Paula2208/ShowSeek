<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#9C27B0"
    app:cardCornerRadius="50dp"
    app:cardElevation="50dp"
    tools:context=".layout.DetailArtista">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="424dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pictureArtista"
                    android:layout_width="346dp"
                    android:layout_height="180dp"
                    android:src="@drawable/ic_baseline_self_improvement_white" />

                <TextView
                    android:id="@+id/nombreArtisticoInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Nombre artista"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tipoAgrupacionInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de agrupación"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/generoMusicalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Género musical"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:translationY="10dp" />

                <RatingBar
                    android:id="@+id/ratingBarInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:numStars="5"
                    android:progressTint="#FFFFFF"
                    android:rating="5"
                    android:translationY="20dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/btnCrearContrato"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="true"
                    android:text="¡Te quiero en mi Evento!"
                    android:textColor="#9C27B0"
                    android:textStyle="bold"
                    android:translationY="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:elevation="100dp"
                    android:src="@drawable/profile1_showseek" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:elevation="100dp"
                    android:src="@drawable/profile3_showseek"
                    android:translationY="10dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="207dp"
                    android:layout_height="245dp"
                    android:elevation="100dp"
                    android:src="@drawable/profile2_showseek"
                    android:translationY="10dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>